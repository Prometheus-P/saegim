# Application
APP_ENV=development
APP_BASE_URL=http://localhost:8000
WEB_BASE_URL=http://localhost:3000

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=prooflink
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Security
# JWT secret for authentication tokens
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_MIN=60

# Encryption key for phone numbers (MUST be exactly 32 characters for AES-256)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(24))"
ENCRYPTION_KEY=change-me-32-byte-key-here!!!!!

# Storage
STORAGE_DRIVER=local
LOCAL_UPLOAD_DIR=data/uploads

# Token
TOKEN_LENGTH=12

# Rate Limiting
PUBLIC_TOKEN_RATE_LIMIT_PER_MIN=60

# Messaging
MESSAGING_PROVIDER=mock  # mock | kakao_i_connect | sens_sms
SHORT_URL_BASE=http://localhost:3000  # prefer short domain (e.g. https://sgm.kr)

# Templates (keep short; placeholders: {brand} {url} {order}
SMS_TEMPLATE_SENDER=[{brand}] 인증 {url}
SMS_TEMPLATE_RECIPIENT=[{brand}] 인증 {url}
ALIMTALK_TEMPLATE_SENDER={brand}\n인증: {url}
ALIMTALK_TEMPLATE_RECIPIENT={brand}\n인증: {url}

# Kakao i Connect (AlimTalk) - optional
KAKAOI_BASE_URL=
KAKAOI_ACCESS_TOKEN=
KAKAO_SENDER_KEY=
KAKAO_TEMPLATE_PROOF_DONE=
KAKAO_SENDER_NO=
KAKAO_CID=

# NAVER Cloud SENS SMS - optional (also used for fallback)
SENS_BASE_URL=https://sens.apigw.ntruss.com
SENS_ACCESS_KEY=
SENS_SECRET_KEY=
SENS_SMS_SERVICE_ID=
SENS_SMS_FROM=
SENS_SMS_CONTENT_TYPE=COMM
SENS_SMS_COUNTRY_CODE=82

FALLBACK_SMS_ENABLED=true
# Admin (Backoffice)
ADMIN_API_KEY=dev-admin-key

# External Auth (OIDC/JWKS)
# Preferred: Bearer token verification via JWKS (Clerk/Auth0/etc.)
ALLOW_ADMIN_API_KEY=true
AUTH_ENABLED=true
AUTH_JWKS_URL=
AUTH_ISSUER=
AUTH_AUDIENCE=
